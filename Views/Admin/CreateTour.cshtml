
<style>

    .CreateTour {
        border-radius: 8px;
        border: 3px solid #00ff21;
        padding-bottom:10px;
        font-size: 16px;
        font-family: Calibri;
        background-color: white;
    }
</style>



@using LittleFish3._0.Models
@{
    List<TourType> tours = ViewBag.Tours;
}
@using (Html.BeginForm("CreateTour", "Admin", FormMethod.Get))
{
    <input type="hidden" name="tourId" id="HiddentourId" />
    <input type="hidden" name="nParticipant" id="nParString" />
    <h2>CreateTour</h2>
    <div class="TourTour">
        <input type="button" class="CreateTour" style="padding-bottom:0px!important;" value="New Tour" onclick="newTour()" />


        <div id="newT" style="display:none">

            <input type="text" name="newTourName" />
            <input type="submit" name="submit" value="Create"class="CreateTour" style="padding-bottom:0px!important;" />

        </div>
    </div>


    <div>
        @foreach (TourType t in tours)
        {
            <div class="CreateTour">
                <div style="        padding-left: 40%;
        font-family: Calibri;
        font-size: 22px;
        font-weight: bold">
                    @t.Type
                </div>
                @foreach (People p in t.People)
                {
                    <div>
                        @p.Name
                    </div>
                }
                <div style="padding-left:40%;
                            font-family:Calibri;
                                font-size:22px;
                                    font-weight:bold">
                    @Html.ActionLink("Add Participant", "AddParticipants", "Admin", new { id = t.Id }, new { @class = "form-group" })
                </div>
            </div>
        }

    </div>


}

<script>

    function addP(q) {

        var x = document.getElementById("HiddentourId");
        x.value = q;




    }



    function newTour() {

        var picture = document.getElementById("newT");

        if (picture.style.display === "unset") {
            picture.style.display = "none";
        }
        else {
            picture.style.display = "unset";
        }
    }

    

</script>